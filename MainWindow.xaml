<Window x:Class="RenameFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RenameFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="365
">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" Width="300" Height="18" />
        <Button x:Name="Btn_Find" Content="Find" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Height="18" Width="40" Click="Btn_Find_Click"/>
        <Button x:Name="Btn_Rename" Content="Rename" HorizontalAlignment="Left" Margin="275,33,0,0" VerticalAlignment="Top" Height="50" Width="80" Click="Btn_Rename_Click"/>

    </Grid>
</Window>
